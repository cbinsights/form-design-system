{
  "name": "fds-components",
  "version": "0.0.1",
  "description": "Form Design System React components",
  "author": "adetrick@cbinsights.com",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib/",
    "compile:jsx": "babel src --out-dir lib --ignore test.jsx --source-maps",
    "compile:css": "postcss src/style/index.css -o lib/style/fds-components.css",
    "build": "yarn compile:css && yarn compile:jsx",
    "test": "jest --color --config jest.config.json",
    "serve": "npx styleguidist server"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "enzyme": "^3.4.3",
    "enzyme-adapter-react-16": "^1.2.0",
    "enzyme-to-json": "^3.3.4",
    "jest": "^23.5.0",
    "postcss-loader": "^3.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-styleguidist": "^7.2.4",
    "webpack": "^4.16.5",
    "webpack-blocks": "^1.0.0"
  }
}
