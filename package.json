{
  "name": "form-design-system",
  "description": "Form: A design system by CB Insights",
  "author": "CB Insights",
  "license": "MIT",
  "scripts": {
    "serve:components": "lerna run serve --stream --scope=fds-components",
    "build": "lerna run build --parallel",
    "test": "lerna run test --stream",
    "bootstrap": "yarn lerna bootstrap",
    "lint": "eslint ./packages/ --ext .js,.jsx",
    "precommit": "lint-staged",
    "publish": "lerna publish --yes --force-publish"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cssnano": "^4.1.0",
    "d3-scale": "^2.1.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-react": "^7.11.1",
    "fs-extra": "^7.0.0",
    "handlebars": "^4.0.11",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.0.0-rc.0",
    "lint-staged": "^7.2.2",
    "lodash": "^4.17.10",
    "mdcss": "^1.5.2",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "prettier": "^1.14.2",
    "prop-types": "^15.6.2",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-styleguidist": "^7.3.0",
    "style-dictionary": "^2.3.0",
    "stylelint": "^9.5.0",
    "tinycolor2": "^1.4.1",
    "webpack": "^4.17.1",
    "webpack-blocks": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cbinsights/form-design-system.git"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 2 Safari versions",
    "Explorer 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "packages/**/*.css": [
        "stylelint --fix",
        "git add"
      ],
      "packages/**/*.{js,jsx}": [
        "prettier --write",
        "eslint --no-ignore",
        "git add"
      ]
    },
    "ignore": [
      "packages/**/*.test.{js,jsx}"
    ]
  },
  "version": "1.11.0"
}
