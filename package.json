{
  "name": "form-design-system",
  "version": "0.0.1",
  "description": "Form: A design system by CB Insights",
  "author": "Adam Detrick <adetrick@cbinsights.com>",
  "license": "MIT",
  "scripts": {
    "styleguide": "lerna run serve --stream --scope fds-components",
    "build": "lerna run build --stream",
    "test": "lerna run test --stream",
    "bootstrap": "yarn lerna bootstrap",
    "lint": "eslint ./ --ext .js,.jsx",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cssnano": "^4.0.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "fs-extra": "^7.0.0",
    "handlebars": "^4.0.11",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.0.0-rc.0",
    "lint-staged": "^7.2.2",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^5.3.0",
    "prettier": "^1.14.2"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 2 Safari versions",
    "Explorer 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "packages/**/*.{js,jsx}": [
        "prettier --write",
        "eslint --no-ignore"
      ]
    },
    "ignore": [
      "packages/**/*.test.{js,jsx}"
    ]
  }
}
