{
  "name": "@cbinsights/fds",
  "description": "Form: A design system by CB Insights",
  "author": "CB Insights",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "scripts": {
    "build:bootstrap": "./scripts/bash/bootstrapBuild.sh",
    "build:dictionary": "node scripts/node/dictionary/build.js",
    "build:styles": "yarn styles:min && yarn styles:full && yarn styles:docs",
    "build:icons": "yarn icons:optimize && yarn icons:react && yarn icons:transpile && yarn icons:css && yarn icons:docs",
    "build:comp": "yarn comp:css && yarn comp:jsx && yarn comp:docs",
    "build:mui-theme": "cp src/mui-theme/index.js ./lib/mui-theme/index.js",
    "build:distCSS": "NODE_ENV=production postcss src/assets/all-styles.css -o ./lib/assets/all-styles.min.css",
    "build:full": "yarn build:bootstrap && yarn build:dictionary && yarn build:styles && yarn build:icons && yarn build:comp && yarn build:mui-theme && yarn build:distCSS",
    "styles:min": "NODE_ENV=production postcss src/base-styles/index.css --verbose --output=lib/base-styles/base-styles.min.css --config=./postcss.config.js",
    "styles:full": "postcss src/base-styles/index.css --verbose --output=lib/base-styles/base-styles.full.css --config=./postcss.config.js",
    "styles:docs": "NODE_ENV=base_styles_docs postcss ./lib/base-styles/base-styles.full.css --output=/dev/null",
    "icons:export": "node ./scripts/node/icons/exportFromSketch.js",
    "icons:optimize": "node ./scripts/node/icons/optimize.js",
    "icons:react": "node ./scripts/node/icons/createComponents.js",
    "icons:transpile": "babel ./lib/icons/react --out-dir ./lib/icons/react",
    "icons:css": "cp src/icons/style/icons.css ./lib/icons/style/icons.css",
    "icons:docs": "node ./scripts/node/icons/buildDocs.js",
    "comp:jsx": "babel src --out-dir=lib --ignore=test.jsx --source-maps",
    "comp:css": "postcss src/components/style/index.css -o ./lib/components/style/fds-components.css --config=./postcss.config.js",
    "comp:docs": "build-storybook -c .storybook -o ./docs/fds-components/",
    "test": "jest --color",
    "snapshot-update": "jest -u --color",
    "lint": "eslint ./src/ --ext .js,.jsx",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "resolutions": {
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "@material-ui/core": "^3.1",
    "@material-ui/icons": "^3",
    "classnames": "^2",
    "prop-types": "^15",
    "react": "^16",
    "react-dom": "^16",
    "react-transition-group": "^2.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@material-ui/core": "^3.1",
    "@material-ui/icons": "^3",
    "@storybook/addon-actions": "^5.1.10",
    "@storybook/addon-centered": "^5.1.10",
    "@storybook/addon-knobs": "^5.1.10",
    "@storybook/addon-links": "^5.1.10",
    "@storybook/addon-notes": "^5.1.10",
    "@storybook/addons": "^5.1.10",
    "@storybook/react": "^5.2.0-beta.25",
    "@storybook/theming": "^5.1.10",
    "@svgr/core": "^4.1.0",
    "@svgr/plugin-jsx": "^4.1.0",
    "@svgr/plugin-svgo": "^4.0.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "classnames": "^2",
    "cssnano": "^4.1.0",
    "d3-scale": "^2.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-react": "^7.11.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.3",
    "handlebars": "^4.0.12",
    "husky": "^1.0.0-rc.13",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "lodash": "^4.17.11",
    "mdcss": "^1.5.2",
    "pascal-case": "^2.0.1",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "prettier": "^1.14.2",
    "prop-types": "^15",
    "react": "^16",
    "react-dom": "^16",
    "react-transition-group": "^2.6",
    "rimraf": "^2.6.2",
    "storybook-addon-jsx": "^7.1.5",
    "storybook-addon-react-docgen": "^1.2.2",
    "style-dictionary": "^2.8.1",
    "stylelint": "^9.5.0",
    "tinycolor2": "^1.4.1",
    "webpack": "^4.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cbinsights/form-design-system.git"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 2 Safari versions",
    "Explorer 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test && yarn build:full && git add docs && git commit -m 'build docs'"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.css": [
        "stylelint --fix",
        "git add"
      ],
      "src/**/*.{js,jsx}": [
        "prettier --write",
        "eslint --no-ignore",
        "git add"
      ]
    },
    "ignore": [
      "src/**/*.test.{js,jsx}",
      "src/**/assets/*.css"
    ]
  }
}
